{
  "name": "uikit",
  "title": "UIkit",
  "description": "UIkit is a lightweight and modular front-end framework for developing fast and powerful web interfaces.",
  "version": "3.5.4",
  "main": "dist/js/uikit.js",
  "style": "dist/css/uikit.css",
  "scripts": {
    "build:css": "npm run scss:core && npm run scss:theme",
    "build:js": "node build/build",
    "copy:wp:css": "copyfiles -u 1 dist/css/* ./wp-content/themes/roguePress-Child/assets/styles",
    "copy:wp:css:components": "copyfiles -u 1 dist/css/components/* ./wp-content/themes/roguePress-Child/assets/styles",
    "copy:wp": "npm-run-all --parallel watch:wp:*",
    "cssmin": "cleancss -o dist/css/uikit.min.css dist/css/uikit.css && cleancss -o dist/css/uikit-theme.min.css dist/css/uikit-theme.css",
    "scss:core": "node-sass -o dist/css src/scss/uikit.scss",
    "scss:theme": "node-sass -o dist/css src/scss/uikit-theme.scss",
    "server": "npm run start",
    "start": "concurrently \"http-server -a localhost -p 3000\" \"start http://localhost:3000/tests\" \"npm run watch\"",
    "watch:css": "onchange \"src/scss/**/*.scss\" -- npm run build:css",
    "watch:js": "onchange \"src/js/**/*.js\" -- npm run build:js",
    "watch": "npm-run-all --parallel watch:*"
  },
  "license": "MIT",
  "homepage": "https://getuikit.com",
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.0",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-replace": "^2.3.2",
    "clean-css-cli": "^4.3.0",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.3.0",
    "http-server": "^0.12.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss": "7.0.31",
    "rollup": "2.11.2",
    "rollup-plugin-html": "^0.2.1"
  }
}
